<script>
$(document).ready(function(){
	
	$("html, body").animate({ scrollTop: 170 }, 1000);
	
	$(".invite").click(function(){
		$(".showinvite").show();
	});
	function phonenumber(phone) {
	    var pattern = new RegExp(/^((\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*)*([,])*)*$/i);
	    return pattern.test(phone);
	};
	$(document).on("click","#sendinvitation",function(){
		if($("#mailarea").val()===""|| phonenumber($("#mailarea").val())=== false)
		{
			$("#mailarea").css("border-color","#D9534F");
			$("#successmsg").text("Enter valid email address").css("color","#D9534F").show();
		}
		else
		{
			$.ajax({
	               type:"post",
	               url:"reflinkmail",
	               data:{emailid:$("#mailarea").val(),message:$("#msgarea").val()} 
			});
			$("#mailarea").val("");
			$("#msgarea").val("");
			$("#successmsg2").css("color","#5CB85C").show();
			$('#chksuccess2').text("Friends Invitation Sent Successfully.");
	     	$('#chksuccess1').fadeIn('slow').css("font-size","15px");
			window.setTimeout(function() {
				window.location.reload();
					}, 1500);
				
		}
	});
	$("#mailarea").on("blur",function(){
		if($("#mailarea").val()===""|| phonenumber($("#mailarea").val())=== false)
		{
			$("#mailarea").css("border-color","#A5A9AC");
			$("#successmsg").hide();
		}
	});
	$("#mailarea").on("keyup",function(){
		if($("#mailarea").val()===""|| phonenumber($("#mailarea").val())=== false)
		{
			$("#mailarea").css("border-color","#D9534F");
			$("#successmsg").hide();
		}
		else
			{
			$("#mailarea").css("border-color","#5CB85C");
			$("#successmsg").hide();
			}
	
	});
	$(document).on("click","#copyclip",function(){
		var text=$("#linktext").text();
		
	
	});
    var facebooktext=$.trim($("#facebookrefer").text()).replace(/\s+/, "");
    if(facebooktext==1)
    	{
    	$('#chksuccess2').text("You have successfully posted the friend invite on a facebook wall.");
     	$('#chksuccess1').fadeIn('slow').css("font-size","15px");
     	session.setAttribute("fbstatus", "0");
    	}
    $('.close').click(function() {
		$('.alert').fadeOut('slow');

					}); 
    $(".dashboardactive").addClass("active");
	 
	 });
$('#closemsg').click(function() {
	$('.alert').fadeOut('slow');
});
</script>




